{
    "name": "{{ packageName }}",
    "description": "{{ packageDesc }}",
    "keywords": [
{{ include('snippets/partials/composer-keywords.twig') }}
    ],
{% if homepage %}
    "homepage": "{{ homepage }}",
{% endif %}
    "license": "{{ license }}",
    "type": "{{ packageType }}",
    "authors": [
        {
            "name": "{{ author }}",
            "email": "{{ email }}"
        }
    ],
    "require": {
        "php": ">=7.1.0"
    },
    "require-dev": {
        "aedart/license": "1.*",
        "aedart/license-file-manager": "~1.8",
        "aedart/testing-gst": "~2.0"
    },
    "autoload": {
        "psr-4": {
            {{ psr4|raw }}
        }
    },
    "scripts": {
        "post-update-cmd": "vendor/bin/license-manager license:copy vendor/aedart/license/aedart/BSD-3-Clause --ansi"
    },
    "minimum-stability": "{{ minStability }}",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}