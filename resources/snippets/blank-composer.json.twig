{
    "name": "{{ packageName }}",
    "description": "{{ packageDesc }}",
    "keywords": [
{% for key, keyword in packageKeywords %}
    {% if loop.last %}
"{{ keyword|trim|capitalize }}"
    {% else %}
"{{ keyword|trim|capitalize }}",
    {% endif %}
{% endfor %}
],
    "homepage": "",
    "license": "{{ license }}",
    "type": "{{ packageType }}",
    "authors": [
        {
            "name": "{{ author }}",
            "email": "{{ email }}"
        }
    ],
    "require": {
        "php": ">=5.6.4"
    },
    "require-dev": {
        "aedart/license": "1.*",
        "aedart/license-file-manager": "~1.5"
    },
    "autoload": {
        "psr-4": {
            {{ psr4|raw }}
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-update-cmd": "vendor/bin/license-manager license:copy vendor/aedart/license/aedart/BSD-3-Clause"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}